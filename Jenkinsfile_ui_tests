pipeline {
    agent any
    triggers { 
        pollSCM('*/1 * * * *') 
    }
    parameters {
        string(name: 'ENVIRONMENT', defaultValue: 'DEV', description: 'Test environment')
    }
    stages { 
        stage('build') {
            steps {
                echo "Running UI tests on ${params.ENVIRONMENT} environment"
                script {
                    def browsers = ['chrome', 'firefox', 'safari']
                    for (int i = 0; i < browsers.size(); ++i) {
                        echo "Running UI tests on ${params.ENVIRONMENT} environment with ${browsers[i]} browser"
                    }
            }
        }
    }
}